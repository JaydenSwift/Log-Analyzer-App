<Application x:Class="Log_Analyzer_App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Log_Analyzer_App"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 
                FIX: Using the modern materialDesign:BundledTheme to load the theme 
                and colors in a single line, as suggested by the library's documentation.
                This resolves the XDG001C resource loading errors.
                
                Note: We must add the materialDesign namespace to the Application tag.
                -->

                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Teal" />

                <!-- 
                This line is still required to load the component styles 
                (like DataGrid and TextBoxes), and the path is correct.
                -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!-- NEW: Global converter for Visibility binding -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>