<UserControl x:Class="Log_Analyzer_App.LogAnalyzerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Log_Analyzer_App"
             mc:Ignorable="d" 
             d:DesignHeight="830" d:DesignWidth="1020">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <!-- Column for the DataGrid and main controls -->
            <ColumnDefinition Width="*" />
            <!-- Column for the sidebar, filters, and status -->
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>

        <!-- Main Log Display and Controls (Left Column) -->
        <StackPanel Grid.Column="0" Margin="0 0 20 0">
            <TextBlock Text="Log File Analyzer" FontSize="28" FontWeight="Bold" Margin="0 0 0 10" Foreground="{DynamicResource PrimaryHueMidBrush}"/>

            <!-- File Upload/Load Section -->
            <materialDesign:Card UniformCornerRadius="10" Padding="15" Margin="0 0 0 15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="FilePathTextBlock" 
                               Text="No log file loaded. Click 'Load File' to begin analysis." 
                               VerticalAlignment="Center" 
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"
                               Opacity="0.7"/>

                    <Button Content="LOAD FILE" 
                            Grid.Column="1" 
                            x:Name="LoadFileButton"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            ToolTip="Open a file dialog to select a .log or .txt file for analysis."
                            Margin="10 0 0 0"
                            Click="LoadFileButton_Click"/>
                </Grid>
            </materialDesign:Card>

            <!-- Log Content Display (DataGrid) -->
            <materialDesign:Card UniformCornerRadius="10" Height="650">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="15 10">
                        <TextBlock Text="Log Lines" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <!-- Bind Badged content to actual log count -->
                        <materialDesign:Badged Content="{Binding ElementName=LogDataGrid, Path=Items.Count}" Margin="10 3 0 0" BadgeBackground="{DynamicResource MaterialDesignLightTealAccentBrush}" BadgeForeground="White"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" 
                              x:Name="LogDataGrid"
                              AutoGenerateColumns="False"  
                              CanUserAddRows="False" 
                              HeadersVisibility="Column"
                              materialDesign:DataGridAssist.CellPadding="10"
                              materialDesign:DataGridAssist.ColumnHeaderPadding="10 10"
                              Margin="15 0 15 15" 
                              SelectionChanged="DataGrid_SelectionChanged">
                        <!-- 
                        CRITICAL FIX: AutoGenerateColumns is now set to 'False'.
                        The columns will be generated manually in the code-behind 
                        (LogAnalyzerView.xaml.cs) using SetupDynamicColumns() to 
                        ensure all user-defined fields are correctly displayed.
                        -->
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

        </StackPanel>

        <!-- Analysis & Filters Sidebar (Right Column) -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Analysis &amp; Processing" FontSize="20" FontWeight="SemiBold" Margin="0 0 0 10"/>

                <!-- Python Processing Status & Pattern Choice Card -->
                <materialDesign:Card UniformCornerRadius="10" Margin="0 0 0 15" Padding="15" Background="{DynamicResource MaterialDesignLightBackground}">
                    <StackPanel>
                        <TextBlock Text="Log File Parsing Configuration" FontWeight="Bold" Margin="0 0 0 10"/>

                        <!-- Parsing Pattern Choice Panel (Visible when a file is selected but not yet parsed) -->
                        <StackPanel x:Name="ParsingChoicePanel" Visibility="Collapsed">

                            <!-- First Line Preview -->
                            <TextBlock Text="First Non-Empty Line Preview:" FontWeight="SemiBold" Opacity="0.8" Margin="0 0 0 5"/>
                            <TextBox Text="{Binding Path=PreviewModel.FirstLogLine}" 
                                     x:Name="FirstLogLineTextBox"
                                     FontFamily="Consolas" 
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                     Margin="0 0 0 10"/>

                            <!-- Pattern Suggestion and Regex Display -->
                            <TextBlock Text="Suggested Parsing Pattern:" FontWeight="SemiBold" Opacity="0.8" Margin="0 0 0 5"/>

                            <materialDesign:Card UniformCornerRadius="5" Padding="10" Background="{DynamicResource MaterialDesignPaper}" Margin="0 0 0 10">
                                <StackPanel>
                                    <TextBlock x:Name="PatternDisplayTextBlock" 
                                               Text="[Default Pattern Regex Placeholder]" 
                                               FontFamily="Consolas" 
                                               TextWrapping="Wrap"
                                               FontSize="11" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    <TextBlock x:Name="PatternDescriptionTextBlock" 
                                               Text="[Default Pattern Description Placeholder]" 
                                               Opacity="0.7" 
                                               FontSize="11" 
                                               Margin="0 5 0 0" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </materialDesign:Card>


                            <!-- 
                            CRITICAL FIX: Replaced the fixed 3-row Grid with an ItemsControl 
                            to dynamically display *all* parsed fields and their names, 
                            regardless of column count.
                            -->
                            <ItemsControl ItemsSource="{Binding Path=PreviewModel.ParsedFirstLine.Fields}" Margin="0 0 0 10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0 0 0 5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Field Name (Key) -->
                                            <TextBlock Text="{Binding Path=Key, StringFormat='{}{0}:'}" 
                                                       Grid.Column="0" FontWeight="SemiBold" Margin="0 0 10 0" VerticalAlignment="Top"/>

                                            <!-- Field Value (Value) -->
                                            <TextBlock Text="{Binding Path=Value}" 
                                                       Grid.Column="1" TextWrapping="Wrap" FontFamily="Consolas" VerticalAlignment="Top"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Action Buttons -->
                            <Button Content="USE DEFAULT PATTERN" 
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{DynamicResource SecondaryHueMidBrush}"
                                    Foreground="{DynamicResource MaterialDesignBody}"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    Click="UseDefaultPattern_Click"
                                    Margin="0 5 0 5"/>

                            <Button Content="CREATE CUSTOM REGEX PATTERN" 
                                    Style="{StaticResource MaterialDesignFlatButton}" 
                                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                                    Click="CustomPattern_Click"
                                    Margin="0 5 0 5"/>

                        </StackPanel>

                    </StackPanel>
                </materialDesign:Card>

                <!-- Summary Stats Card -->
                <materialDesign:Card UniformCornerRadius="10" Margin="0 0 0 15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Summary Statistics" FontWeight="Bold" Margin="0 0 0 10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- INFO Events -->
                            <materialDesign:PackIcon Kind="Information" Grid.Row="0" Grid.Column="0" Margin="0 6 10 6" Foreground="Blue" VerticalAlignment="Center"/>
                            <TextBlock Text="INFO Events:" Grid.Row="0" Grid.Column="1" Margin="0 6 0 6" VerticalAlignment="Center"/>
                            <TextBlock Text="8,900" Grid.Row="0" Grid.Column="2" x:Name="InfoCountText" HorizontalAlignment="Right" FontWeight="SemiBold" Margin="8" VerticalAlignment="Center"/>

                            <!-- WARN Events -->
                            <materialDesign:PackIcon Kind="Alert" Grid.Row="1" Grid.Column="0" Margin="0 6 10 6" Foreground="Orange" VerticalAlignment="Center"/>
                            <TextBlock Text="WARN Events:" Grid.Row="1" Grid.Column="1" Margin="0 6 0 6" VerticalAlignment="Center"/>
                            <TextBlock Text="580" Grid.Row="1" Grid.Column="2" x:Name="WarnCountText" HorizontalAlignment="Right" FontWeight="SemiBold" Margin="8" VerticalAlignment="Center"/>

                            <!-- ERROR Events -->
                            <materialDesign:PackIcon Kind="AlertCircle" Grid.Row="2" Grid.Column="0" Margin="0 6 10 6" Foreground="Red" VerticalAlignment="Center"/>
                            <TextBlock Text="ERROR Events:" Grid.Row="2" Grid.Column="1" Margin="0 6 0 6" VerticalAlignment="Center"/>
                            <TextBlock Text="20" Grid.Row="2" Grid.Column="2" x:Name="ErrorCountText" HorizontalAlignment="Right" FontWeight="SemiBold" Margin="8" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Filters Card -->
                <materialDesign:Card UniformCornerRadius="10" Margin="0 0 0 15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Filters" FontWeight="Bold" Margin="0 0 0 10"/>
                        <CheckBox Content="Show only Errors" Margin="0 5"/>
                        <CheckBox Content="Filter by Date Range" Margin="0 5"/>
                        <TextBox materialDesign:HintAssist.Hint="Search Message Content" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 10 0 0"/>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>