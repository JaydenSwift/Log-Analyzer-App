<UserControl x:Class="Log_Analyzer_App.LogAnalyzerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Log_Analyzer_App"
             mc:Ignorable="d" 
             d:DesignHeight="830" d:DesignWidth="1020">

    <!-- The problematic UserControl.Resources block is removed entirely -->

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <!-- Column for the DataGrid and main controls -->
            <ColumnDefinition Width="*" />
            <!-- Column for the sidebar, filters, and status -->
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>

        <!-- Main Log Display and Controls (Left Column) -->
        <StackPanel Grid.Column="0" Margin="0 0 20 0">
            <TextBlock Text="Log File Analyzer" FontSize="28" FontWeight="Bold" Margin="0 0 0 10" Foreground="{DynamicResource PrimaryHueMidBrush}"/>

            <!-- File Upload/Load Section -->
            <materialDesign:Card UniformCornerRadius="10" Padding="15" Margin="0 0 0 15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="FilePathTextBlock" 
                               Text="No log file loaded. Click 'Load File' to begin analysis." 
                               VerticalAlignment="Center" 
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"
                               Opacity="0.7"/>

                    <Button Content="LOAD FILE" 
                            Grid.Column="1" 
                            x:Name="LoadFileButton"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            ToolTip="Open a file dialog to select a .log or .txt file for analysis."
                            Margin="10 0 0 0"
                            Click="LoadFileButton_Click"/>
                </Grid>
            </materialDesign:Card>

            <!-- Log Content Display (DataGrid) -->
            <materialDesign:Card UniformCornerRadius="10" Height="650">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="15 10">
                        <TextBlock Text="Log Lines" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <!-- Bind Badged content to actual log count of the FILTERED view -->
                        <!-- NOTE: Binding to Items.Count shows the filtered count, which is correct for the UI -->
                        <materialDesign:Badged Content="{Binding ElementName=LogDataGrid, Path=Items.Count}" Margin="10 3 0 0" BadgeBackground="{DynamicResource MaterialDesignLightTealAccentBrush}" BadgeForeground="White"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" 
                              x:Name="LogDataGrid"
                              AutoGenerateColumns="False"  
                              CanUserAddRows="False" 
                              HeadersVisibility="Column"
                              materialDesign:DataGridAssist.CellPadding="10"
                              materialDesign:DataGridAssist.ColumnHeaderPadding="10 10"
                              HorizontalContentAlignment="Right" 
                              Margin="15 0 15 15" 
                              SelectionChanged="DataGrid_SelectionChanged">
                        <!-- 
                        CRITICAL FIX: AutoGenerateColumns is now set to 'False'.
                        The columns will be generated manually in the code-behind 
                        (LogAnalyzerView.xaml.cs) using SetupDynamicColumns() to 
                        ensure all user-defined fields are correctly displayed.
                        -->
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

        </StackPanel>

        <!-- Analysis & Filters Sidebar (Right Column) -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Analysis &amp; Processing" FontSize="20" FontWeight="SemiBold" Margin="0 0 0 10"/>

                <!-- Python Processing Status & Pattern Choice Card -->
                <!-- ENSURE Background is MaterialDesignPaper for contrast/consistency -->
                <materialDesign:Card UniformCornerRadius="10" Margin="0 0 0 15" Padding="15" Background="{DynamicResource MaterialDesignPaper}">
                    <StackPanel>
                        <TextBlock Text="Log File Parsing Configuration" FontWeight="Bold" Margin="0 0 0 10"/>

                        <!-- Parsing Pattern Choice Panel (Visible when a file is selected but not yet parsed) -->
                        <StackPanel x:Name="ParsingChoicePanel" Visibility="Collapsed">

                            <!-- First Line Preview -->
                            <TextBlock Text="First Non-Empty Line Preview:" FontWeight="SemiBold" Opacity="0.8" Margin="0 0 0 5"/>
                            <TextBox Text="{Binding Path=PreviewModel.FirstLogLine}" 
                                     x:Name="FirstLogLineTextBox"
                                     FontFamily="Consolas" 
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                     Margin="0 0 0 10"/>

                            <!-- Pattern Suggestion and Regex Display -->
                            <TextBlock Text="Suggested Parsing Pattern:" FontWeight="SemiBold" Opacity="0.8" Margin="0 0 0 5"/>

                            <materialDesign:Card UniformCornerRadius="5" Padding="10" Background="{DynamicResource MaterialDesignLightBackground}" Margin="0 0 0 10">
                                <StackPanel>
                                    <TextBlock x:Name="PatternDisplayTextBlock" 
                                               Text="[Default Pattern Regex Placeholder]" 
                                               FontFamily="Consolas" 
                                               TextWrapping="Wrap"
                                               FontSize="11" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    <TextBlock x:Name="PatternDescriptionTextBlock" 
                                               Text="[Default Pattern Description Placeholder]" 
                                               Opacity="0.7" 
                                               FontSize="11" 
                                               Margin="0 5 0 0" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </materialDesign:Card>


                            <!-- 
                            CRITICAL FIX: Replaced the fixed 3-row Grid with an ItemsControl 
                            to dynamically display *all* parsed fields and their names, 
                            regardless of column count.
                            -->
                            <ItemsControl ItemsSource="{Binding Path=PreviewModel.ParsedFirstLine.Fields}" Margin="0 0 0 10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0 0 0 5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Field Name (Key) -->
                                            <TextBlock Text="{Binding Path=Key, StringFormat='{}{0}:'}" 
                                                       Grid.Column="0" FontWeight="SemiBold" Margin="0 0 10 0" VerticalAlignment="Top"/>

                                            <!-- Field Value (Value) -->
                                            <TextBlock Text="{Binding Path=Value}" 
                                                       Grid.Column="1" TextWrapping="Wrap" FontFamily="Consolas" VerticalAlignment="Top"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Action Buttons -->
                            <Button Content="USE DEFAULT PATTERN" 
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{DynamicResource SecondaryHueMidBrush}"
                                    Foreground="{DynamicResource MaterialDesignBody}"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    Click="UseDefaultPattern_Click"
                                    Margin="0 5 0 5"/>

                            <Button Content="CREATE CUSTOM REGEX PATTERN" 
                                    Style="{StaticResource MaterialDesignFlatButton}" 
                                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                                    Click="CustomPattern_Click"
                                    Margin="0 5 0 5"/>

                        </StackPanel>

                    </StackPanel>
                </materialDesign:Card>

                <!-- Filters Card (MOVED UP) -->
                <!-- ENSURE Background is MaterialDesignPaper for contrast/consistency -->
                <materialDesign:Card UniformCornerRadius="10" Margin="0 0 0 15" Padding="15" Background="{DynamicResource MaterialDesignPaper}">
                    <StackPanel>
                        <TextBlock Text="Filters" FontWeight="Bold" Margin="0 0 0 10"/>

                        <!-- NEW: Date Range Filter Section -->
                        <TextBlock Text="Date/Time Filter" Opacity="0.8" FontWeight="SemiBold" Margin="0 0 0 5"/>

                        <!-- NEW: Timestamp Column Selector -->
                        <ComboBox materialDesign:HintAssist.Hint="Select Timestamp Column"
                                  ItemsSource="{Binding AvailableStatsFields}"
                                  SelectedItem="{Binding SelectedTimestampField, Mode=TwoWay}"
                                  Margin="0 0 0 10"
                                  />

                        <!-- Date Pickers -->
                        <Grid Margin="0 0 0 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Start Date -->
                            <DatePicker Grid.Column="0" 
                                        x:Name="StartDatePicker"
                                        materialDesign:HintAssist.Hint="Start Date"
                                        SelectedDate="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedDateChanged="DateRange_SelectedDateChanged"/>

                            <!-- Separator -->
                            <TextBlock Grid.Column="1" Text="-" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5"/>

                            <!-- End Date -->
                            <DatePicker Grid.Column="2" 
                                        x:Name="EndDatePicker"
                                        materialDesign:HintAssist.Hint=" End Date"
                                        SelectedDate="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedDateChanged="DateRange_SelectedDateChanged"/>
                        </Grid>

                        <!-- Time Pickers -->
                        <Grid Margin="0 0 0 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Start Time -->
                            <TextBox Grid.Column="0" 
                                     materialDesign:HintAssist.Hint="Start Time (HH:MM)"
                                     Text="{Binding StartTimeText, UpdateSourceTrigger=PropertyChanged}"
                                     TextChanged="TimeRange_TextChanged"/>

                            <!-- Separator -->
                            <TextBlock Grid.Column="1" Text="-" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5"/>

                            <!-- End Time -->
                            <TextBox Grid.Column="2" 
                                     materialDesign:HintAssist.Hint=" End Time (HH:MM)"
                                     Text="{Binding EndTimeText, UpdateSourceTrigger=PropertyChanged}"
                                     TextChanged="TimeRange_TextChanged"/>
                        </Grid>
                        <!-- END NEW: Date/Time Range Filter Section -->


                        <!-- Column Visibility Controls -->
                        <TextBlock Text="Column Visibility" Opacity="0.8" FontWeight="SemiBold" Margin="0 0 0 5"/>

                        <!-- FIX: Removed UniformCornerRadius from ScrollViewer and applied it to a new wrapping Card -->
                        <materialDesign:Card UniformCornerRadius="4" Padding="0" Margin="0 0 0 10" Background="{DynamicResource MaterialDesignPaper}">
                            <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto" BorderThickness="0" Padding="10">
                                <ItemsControl ItemsSource="{Binding ColumnControls}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Header}" 
                                                      IsChecked="{Binding IsVisible, Mode=TwoWay}"
                                                      Checked="ColumnVisibility_Toggled"
                                                      Unchecked="ColumnVisibility_Toggled"
                                                      Margin="0 0 15 5"
                                                      />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </materialDesign:Card>

                        <!-- Invert Filter Checkbox -->
                        <CheckBox x:Name="InvertFilterCheckBox"
                                  Content="Invert Match (Exclude logs containing keywords)"
                                  Margin="0 0 0 10"
                                  Checked="InvertFilter_CheckedOrUnchecked"
                                  Unchecked="InvertFilter_CheckedOrUnchecked"/>

                        <TextBox x:Name="SearchTextBox"
                                 materialDesign:HintAssist.Hint="Search Content (Grep: multiple words means AND)" 
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                 Margin="0 5 0 0"
                                 TextChanged="SearchTextBox_TextChanged"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Summary Stats Card (DROPDOWN RESTORED) -->
                <!-- ENSURE Background is MaterialDesignPaper for contrast/consistency -->
                <materialDesign:Card UniformCornerRadius="10" Margin="0 0 0 15" Padding="15" Background="{DynamicResource MaterialDesignPaper}">
                    <StackPanel>
                        <TextBlock Text="Summary Statistics" FontWeight="Bold" Margin="0 0 0 10"/>

                        <!-- RESTORED: Field Selector Dropdown -->
                        <ComboBox materialDesign:HintAssist.Hint="Group by Column"
                                  ItemsSource="{Binding AvailableStatsFields}"
                                  SelectedItem="{Binding SelectedStatsField, Mode=TwoWay}"
                                  Margin="0 0 0 10"
                                  />

                        <!-- Dynamic Count ItemsControl -->
                        <ItemsControl ItemsSource="{Binding SummaryCounts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0 4 0 4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon (using the dynamic Color property) -->
                                        <materialDesign:PackIcon Kind="CircleSmall" Grid.Column="0" Margin="0 0 10 0" 
                                                                 Foreground="{Binding Color}" VerticalAlignment="Center" Width="20" Height="20"/>

                                        <!-- Key (Level Name) -->
                                        <TextBlock Text="{Binding Key, StringFormat='{}{0} Events:'}" Grid.Column="1" 
                                                   Margin="0 0 0 0" VerticalAlignment="Center" FontWeight="SemiBold"/>

                                        <!-- Count (Formatted) -->
                                        <TextBlock Text="{Binding Count, StringFormat='N0'}" Grid.Column="2" 
                                                   HorizontalAlignment="Right" FontWeight="Bold" VerticalAlignment="Center"
                                                   Foreground="{Binding Color}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>