<Window x:Class="Log_Analyzer_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Log_Analyzer_App"
        xmlns:materialDesignControls="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        mc:Ignorable="d"
        Height="850" Width="1200" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize" Background="{x:Null}" AllowsTransparency="True" Loaded="Window_Loaded">

    <!-- Outer Grid wraps the Card to manage the loading overlay -->
    <Grid>
        <materialDesign:Card Margin="10" UniformCornerRadius="15">
            <!-- Main Content Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Column width is still 80 to guarantee click area. -->
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="materialDesign:PackIcon">
                        <Setter Property="Width" Value="30"></Setter>
                        <Setter Property="Height" Value="30"></Setter>
                        <!-- FIX: Explicitly center the PackIcon itself -->
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>

                    <!-- The SidebarButton style is REMOVED as we are styling the ListViewItem directly. -->

                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Margin" Value="0 15"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
                        <!-- Ensure content is centered (the icon) -->
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <!-- Ensure the item itself stretches to fill the whole column -->
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                        <Style.Triggers>
                            <!-- Visual feedback on MouseOver (like a button) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource SecondaryHueMidBrush}"/>
                                <Setter Property="Background" Value="{DynamicResource MaterialDesignLightBackground}"/>
                            </Trigger>
                            <!-- Visual feedback on Selection (active tab) -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SecondaryHueLightBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource SecondaryHueMidBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>

                <!-- Sidebar Grid (Column 0) -->
                <Grid Grid.Column="0" Background="{DynamicResource MaterialDesignPaper}">

                    <!-- The ListView handles the selection state which we use for navigation -->
                    <ListView x:Name="SidebarMenu" Margin="0 20" SelectionChanged="SidebarMenu_SelectionChanged">

                        <!-- 1. Log Analyzer (Default Page) - Now holds just the icon -->
                        <ListViewItem Tag="LogAnalyzerView" IsSelected="True" ToolTip="Log Analyzer">
                            <materialDesign:PackIcon Kind="FileDocumentMultipleOutline"/>
                        </ListViewItem>

                        <!-- 2. Chart Viewer - Now holds just the icon -->
                        <ListViewItem Tag="ChartViewer" ToolTip="Chart Viewer">
                            <materialDesign:PackIcon Kind="ChartBoxOutline"/>
                        </ListViewItem>

                        <!-- 3. NEW: Chat Assistant Tab -->
                        <ListViewItem Tag="ChatAssistantView" ToolTip="Chat/Query Assistant">
                            <materialDesign:PackIcon Kind="RobotHappyOutline"/>
                        </ListViewItem>

                        <!-- 4. Settings - Now holds just the icon -->
                        <ListViewItem Tag="SettingsView" ToolTip="Settings">
                            <materialDesign:PackIcon Kind="CogOutline"/>
                        </ListViewItem>

                        <!-- Exit Button (Special Case - Now the ListViewItem itself is clickable and handles the selection logic) -->
                        <!-- FIX: Removed nested Button and moved the icon directly into the ListViewItem content to make the whole item clickable. -->
                        <ListViewItem Margin="0 15" IsSelected="False" Tag="Exit" ToolTip="Exit Application">
                            <materialDesign:PackIcon Kind="ExitToApp" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </ListViewItem>
                    </ListView>
                </Grid>

                <!-- Content Area -->
                <!-- FIX: Changed Background from static "White" to dynamic "MaterialDesignBackground" -->
                <Grid Grid.Column="1" Background="{DynamicResource MaterialDesignBackground}" x:Name="RenderPages">
                    <!-- Views will be dynamically loaded here -->
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- NEW: Loading Overlay (Covers the whole card area) -->
        <Grid x:Name="LoadingOverlay"
              Margin="410,350,410,350"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">

            <!-- NEW: Border element ensures the background has rounded corners -->
            <Border Background="{DynamicResource MaterialDesignPaper}"
                    Opacity="1"
                    CornerRadius="15">

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Use standard ProgressBar with MaterialDesignCircularProgressBar style -->
                    <!-- Spinner size: 100x100 -->
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                                 IsIndeterminate="{Binding IsLoading}" 
                                 Width="50" Height="50" 
                                 Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                    <TextBlock Text="Processing Log Data..." 
                               Margin="0 0 0 0" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    <TextBlock Text="This may take a moment for large files." 
                               Opacity="0.7" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>