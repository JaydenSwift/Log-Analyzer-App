<UserControl x:Class="Log_Analyzer_App.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="830" d:DesignWidth="1020">

    <!-- FIX: Removed the problematic 'Foreground' property.
         We now use the TextElement.Foreground attached property, 
         which correctly applies the theme-dependent MaterialDesignBody brush 
         to all text elements within the Grid. -->
    <Grid Background="{DynamicResource MaterialDesignPaper}" 
          Margin="20"
          TextElement.Foreground="{DynamicResource MaterialDesignBody}">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 40 0 0" Width="400">
            <materialDesign:PackIcon Kind="Cog" Width="64" Height="64" HorizontalAlignment="Center" Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="Application Settings" FontSize="32" FontWeight="Bold" Margin="0 10 0 25" HorizontalAlignment="Center"/>

            <!-- Theme Settings Card -->
            <materialDesign:Card UniformCornerRadius="10" Padding="20" Margin="0 0 0 20">
                <StackPanel>
                    <!-- NOTE: TextBlocks with explicit Foreground (like SecondaryHueMidBrush) will NOT change with the base theme. This is by design for accents. -->
                    <TextBlock Text="Display Preferences" FontSize="18" FontWeight="SemiBold" Margin="0 0 0 15" Foreground="{DynamicResource MaterialDesignBody}"/>

                    <!-- Dark Mode Toggle -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <!-- These TextBlocks now correctly inherit TextElement.Foreground -->
                            <TextBlock Text="Dark Mode" FontWeight="SemiBold"/>
                            <TextBlock Text="Switch between the default light theme and the dark theme." Opacity="0.7" FontSize="12" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Toggle Button as previously fixed -->
                        <ToggleButton 
                            Grid.Column="1"
                            Style="{StaticResource MaterialDesignSwitchToggleButton}"
                            IsChecked="{Binding IsDarkModeEnabled, Mode=TwoWay}"
                            VerticalAlignment="Center"
                        />
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- NEW: Pattern File Settings Card -->
            <materialDesign:Card UniformCornerRadius="10" Padding="20" Margin="0 0 0 20">
                <StackPanel>
                    <TextBlock Text="Pattern Configuration" FontSize="18" FontWeight="SemiBold" Margin="0 0 0 15" Foreground="{DynamicResource MaterialDesignBody}"/>

                    <StackPanel Margin="0 0 10 15">
                        <TextBlock Text="Custom Pattern File (Any .json file)" FontWeight="SemiBold"/>
                        <TextBlock Text="Upload a custom JSON file to override or extend the log pattern suggestions. Leave blank for default." Opacity="0.7" FontSize="12" TextWrapping="Wrap"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Read-Only Textbox for Path -->
                        <TextBox Grid.Column="0"
                                 x:Name="CustomPathTextBox"
                                 Text="{Binding CustomPatternsFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Default (Internal patterns.json)"
                                 IsReadOnly="True"
                                 VerticalAlignment="Center"
                                 Margin="0 0 10 0"
                                 TextWrapping="Wrap"
                                 ToolTip="{Binding CustomPatternsFilePath}"
                                 />

                        <!-- Clear Button -->
                        <Button Grid.Column="1"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Content="{materialDesign:PackIcon Clear}"
                                ToolTip="Clear Custom Path (Use Default)"
                                Margin="0 0 5 0"
                                Click="ClearPath_Click"
                                />

                        <!-- Browse Button -->
                        <Button Grid.Column="2"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Content="BROWSE"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                Click="BrowsePath_Click"
                                />
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

        </StackPanel>
    </Grid>
</UserControl>